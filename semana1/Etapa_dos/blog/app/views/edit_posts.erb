<h1>Blog anonimo </h1>
<h3>Editar Blog</h3>

<link rel = "stylesheet" type = "text/css" href="./public/css/application.css">

<br>
<form action = "/posts/<%=@post.id%>" method = "post">
  <div>	
    <input type="hidden" name="_method" value = "put" /> 
    <label for="title">Title Post:</label>
  	<input id = "post_title" name = "post[title]" type ="text" value="<%= @post.title %>" />
	</div>

  <div>
	<label for="tag">Post tags:</label>
  	<% array = Array.new %>
  	<% @tags.each do |item| %>
  		<% array << item.name %>
    <% end %>
   
     	<input id="post_tag" name="tags" type="text" value="<%= array.join(", ") %>" /> 
  </div>

  <div>
	 <label for="body">Body Post:</label>
    <textarea id = "post_body" name ="post[body]" class ="form-control" rows="5"><%= @post.body %></textarea>
  </div>  
    	<button type ="submit" class = "btn-sucess">Submit</button>
 </form>
  <br>
  <a href ="/">Regresar al menu</a>



